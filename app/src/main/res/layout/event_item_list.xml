<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="145dp"
    android:layout_height="100dp"
    android:background="@drawable/walk_item_bg"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/imageIconList"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="6dp"
        app:layout_constraintVertical_bias="0.511"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/timeTitleList"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/nameTitleList"
        android:layout_width="69dp"
        android:layout_height="20dp"
        android:layout_marginTop="-2dp"
        android:paddingLeft="5dp"
        android:text="Laure"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timeTitleList"
        android:layout_width="85dp"
        android:layout_height="17dp"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="5dp"
        android:text="MORNING"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="@+id/dateTitleList"
        app:layout_constraintRight_toRightOf="@+id/dateTitleList"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/dateTitleList"
        android:layout_width="85dp"
        android:layout_height="17dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="5dp"
        android:text="04/07/2017"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeTitleList"
        tools:layout_editor_absoluteX="52dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="74dp"
        android:layout_height="5dp"
        android:layout_marginTop="6dp"
        app:layout_constraintLeft_toLeftOf="@+id/timeTitleList"
        app:layout_constraintRight_toRightOf="@+id/timeTitleList"
        app:layout_constraintTop_toBottomOf="@+id/nameTitleList"
        app:srcCompat="@drawable/small_blue_line" />


</android.support.constraint.ConstraintLayout>

