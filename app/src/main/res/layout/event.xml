<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/walkerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Walker"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="152dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/walkerNameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/titleLable"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/walkerLabel"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.797" />

    <TextView
        android:id="@+id/dogNameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/walkerNameInput"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/DogLabel"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.762" />

    <TextView
        android:id="@+id/DogLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dog Name"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/walkerLabel" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="160dp"
        android:layout_height="87dp"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/dogNameInput"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/WhereLabel"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.673" />

    <TextView
        android:id="@+id/WhereLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place"
        android:layout_marginLeft="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="66dp"
        app:layout_constraintTop_toBottomOf="@+id/DogLabel" />

    <TextView
        android:id="@+id/intoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="something special"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/WhereLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.568" />

    <TextView
        android:id="@+id/info"
        android:layout_width="209dp"
        android:layout_height="123dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/mapView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/intoLabel"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.394"
        app:layout_constraintVertical_bias="0.666" />

    <TextView
        android:id="@+id/titleLable"
        android:layout_width="221dp"
        android:layout_height="35dp"
        android:fontFamily="monospace"
        android:text="This Walk"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="66dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.585" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />
</android.support.constraint.ConstraintLayout>