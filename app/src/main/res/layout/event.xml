<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/walkerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Walker"
        android:layout_marginTop="47dp"
        app:layout_constraintTop_toBottomOf="@+id/titleLabel"
        app:layout_constraintRight_toLeftOf="@+id/walkerNameInput"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.542" />

    <EditText
        android:id="@+id/walkerNameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/titleLabel"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/walkerNameInput"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/DogLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dog Name"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/walkerLabel"
        app:layout_constraintRight_toLeftOf="@+id/editText2"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="198dp"
        android:layout_height="128dp"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        android:layout_marginRight="33dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/WhereLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place"
        android:layout_marginTop="89dp"
        app:layout_constraintTop_toBottomOf="@+id/DogLabel"
        app:layout_constraintRight_toLeftOf="@+id/mapView"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.463" />

    <TextView
        android:id="@+id/intoLabel"
        android:layout_width="88dp"
        android:layout_height="49dp"
        android:text="something special"
        android:layout_marginTop="84dp"
        app:layout_constraintTop_toBottomOf="@+id/WhereLabel"
        app:layout_constraintRight_toLeftOf="@+id/info"
        android:layout_marginRight="29dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/info"
        android:layout_width="215dp"
        android:layout_height="53dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/mapView"
        android:layout_marginRight="29dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.39" />

    <TextView
        android:id="@+id/titleLabel"
        android:layout_width="221dp"
        android:layout_height="35dp"
        android:fontFamily="monospace"
        android:text="This Walk"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="31dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.503" />

</android.support.constraint.ConstraintLayout>