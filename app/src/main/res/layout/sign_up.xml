<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_up_background"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="153dp"
        android:layout_height="46dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:fontFamily="roboto"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullNameInput" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="249dp"
        android:layout_height="44dp"
        android:background="@drawable/sign_up_btn"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/RGroup"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/fullNameInput"
        android:layout_width="236dp"
        android:layout_height="42dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:ems="10"
        android:hint="Full Name"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textColorHint="@color/common_google_signin_btn_text_dark_default"
        android:backgroundTint="@android:color/white"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileImage"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="125dp"
        app:layout_constraintHorizontal_bias="0.503" />

    <EditText
        android:id="@+id/dogNameInput"
        android:layout_width="178dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Dog Name"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/dogPic"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/mailInput"
        app:layout_constraintHorizontal_bias="0.14" />

    <EditText
        android:id="@+id/addressInput"
        android:layout_width="234dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/passwordInput"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.496" />

    <EditText
        android:id="@+id/mailInput"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="name@domain.com"
        android:inputType="textEmailAddress"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumberInput"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.496" />

    <EditText
        android:id="@+id/phoneNumberInput"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Phone"
        android:inputType="phone"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/addressInput"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.496" />

    <Button
        android:id="@+id/showPasswordButton"
        android:layout_width="73dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/show_btn"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="@+id/passwordInput"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/passwordInput"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/passwordInput"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="88dp"
        android:layout_height="93dp"
        android:background="@drawable/sign_up_pic"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/dogPic"
        android:layout_width="88dp"
        android:layout_height="93dp"
        app:srcCompat="@drawable/sign_up_pic_blue"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/mailInput"
        android:layout_marginLeft="63dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <RadioGroup
        android:id="@+id/RGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.337"
        app:layout_constraintLeft_toRightOf="@+id/dogPic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dogNameInput">

        <RadioButton
            android:id="@+id/smallButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:onClick="onRadioButtonClicked"
            android:text="S"
            app:layout_constraintRight_toLeftOf="@+id/mediumButton" />

        <RadioButton
            android:id="@+id/mediumButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:onClick="onRadioButtonClicked"
            android:text="M"
            app:layout_constraintRight_toLeftOf="@+id/largeButton" />

        <RadioButton
            android:id="@+id/largeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:onClick="onRadioButtonClicked"
            android:text="L" />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>